console.log(thous_whole);
console.log(thous + " thousands");
console.log("--------");
console.log(hund_mod);
console.log(hund_whole);
console.log(hund + " hundreds");
console.log("--------");
console.log(ten_mod);
console.log(ten_whole);
console.log(ten + " tens");
console.log("--------");
console.log(one_mod);
console.log(one_whole);
console.log(one + " ones");


